{
  "name": "wish-server",
  "version": "1.0.0",
  "description": "Simple backend for the WISH Project",
  "main": "src/index.ts",
  "now": {
    "alias": "wish-server",
    "env": {
      "CORS_HOST": "https://dhleong.github.io",
      "GAPI_PUSH_URL": "https://wish-server.now.sh/v1/push/send",
      "VAPID_PUBLIC_KEY": "@wish-vapid-public-key",
      "VAPID_PRIVATE_KEY": "@wish-vapid-private-key",
      "REDIS_ENDPOINT": "@wish-redis-endpoint",
      "REDIS_PASSWORD": "@wish-redis-password"
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "check": "npm run lint && npm test",
    "dev": "ts-node-dev src/index.ts",
    "deploy": "now --public && now alias",
    "lint": "tslint -p .",
    "start": "node dist/index.js",
    "test": "mocha -r ts-node/register 'test/**/*-test.ts'"
  },
  "author": "Daniel Leong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhleong/wish-server"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "darkside-sse": "^1.0.1",
    "googleapis": "^34.0.0",
    "handy-redis": "^1.5.1",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lightside": "^1.0.0",
    "redis": "^2.8.0",
    "typescript": "^3.1.3",
    "uuid": "^3.3.2",
    "web-push": "^3.3.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.32",
    "@types/koa-static": "^4.0.0",
    "@types/koa__cors": "^2.2.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.7",
    "@types/redis": "^2.8.7",
    "@types/uuid": "^3.4.4",
    "@types/web-push": "^3.3.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "ts-node-dev": "^1.0.0-pre.30",
    "tslint": "^5.11.0"
  }
}
